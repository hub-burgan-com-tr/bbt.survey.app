{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
   "ConnectionStrings": {
    "UserDataConnection": "Server=HSERVER;Database=HUMANIST;User Id=MMMM;Password=FFFF;Trust Server Certificate=true",
    "UserConnection": "Server=TESTSERVER;Database=SurveyTest;User Id=XXXX;Password=YYYY;Trust Server Certificate=true"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/api-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj} {NewLine} {Exception}]"
        }
      }
    ]
  }
}
